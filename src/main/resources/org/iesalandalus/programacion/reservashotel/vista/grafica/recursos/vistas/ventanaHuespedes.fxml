<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<Pane prefHeight="700" prefWidth="800" style="-fx-background-color: #92D4F7;" styleClass="raiz" stylesheets="@../estilos/estilos.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.iesalandalus.programacion.reservashotel.vista.grafica.controladores.CVentanaHuespedes">
    <children>
 	  <!-- Imagen huespedes -->
      <ImageView fitHeight="30" fitWidth="30" layoutX="50" layoutY="50">
         <image>
            <Image url="@../imagenes/Huesped.png" />
         </image>
      </ImageView>
      
      <!-- TEXTO -->
      <Text fill="#000000" layoutX="180" layoutY="50" text="GESTIÓN HUÉSPEDES">
          <font><Font name="Arial" size="30" /></font>
      </Text>
        
      <!-- Tabla de listado de los huéspedes -->  
      <TableView fx:id="TablaListadoHuespedes" layoutX="50" layoutY="100" prefHeight="300" prefWidth="600">
      
        <columns>
          <TableColumn fx:id="Nombre" prefWidth="120" text="Nombre" />
          <TableColumn fx:id="Dni"    prefWidth="80" text="Dni" />
          <TableColumn fx:id="Correo" prefWidth="150" text="Correo" />
          <TableColumn fx:id="Telefono" prefWidth="100" text="Telefono" />
          <TableColumn fx:id="FechaNacimiento" prefWidth="150" text="Fecha nacimiento" />
        </columns>
        
         <contextMenu>
            <ContextMenu>
              <items>
                <MenuItem fx:id="MenuInsertarHuesped" onAction="#InsertaHuesped" text="Insertar Huesped" />
                <MenuItem fx:id="MenuEliminarHuesped" onAction="#EliminaHuesped" text="Eliminar Huesped" />
              </items>
            </ContextMenu>
         </contextMenu>
         
      </TableView>
      
      
    <!-- Botones para insertar o borrar huésped -->
    <Button fx:id="botonInsertarHuesped" layoutX="100" layoutY="450" onAction="#InsertarHuespedes" style="-fx-background-color: #4CAF50; -fx-border-color: #388E3C; -fx-border-width: 3; -fx-text-fill: white; -fx-font-family: Arial; -fx-font-size: 15;" text="Insertar Huésped"/>

	<Button fx:id="botonBorrarHuesped" layoutX="350" layoutY="450" onAction="#BorrarHuespedes" style="-fx-background-color: #FF0000; -fx-border-color: #840000; -fx-border-width: 3; -fx-text-fill: white; -fx-font-family: Arial; -fx-font-size: 15;" text="Eliminar Huésped"/>
    
    <!-- Logo -->
    <ImageView fitHeight="30" fitWidth="30" layoutX="650" layoutY="450">
         <image>
            <Image url="@../imagenes/logo.png" />
         </image>
    </ImageView>
      
      
      
    </children>
</Pane>
